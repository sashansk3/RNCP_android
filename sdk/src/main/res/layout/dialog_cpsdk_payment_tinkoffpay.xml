<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/cpsdk_bg_rounded_dialog_inset"
    android:paddingStart="48dp"
    android:paddingTop="28dp"
    android:paddingEnd="48dp"
    android:paddingBottom="40dp">

    <ImageView
        android:id="@+id/icon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cpsdk_ic_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_status"
        style="@style/cpsdk_TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cpsdk_margin_big"
        android:gravity="center"
        android:textColor="@color/cpsdk_dark"
        android:text="@string/cpsdk_text_process_title_tinkoff_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_status" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="6sp"
        android:textColor="#444d5b"
        android:textSize="18sp"
        android:textStyle="normal"
        android:text="cpsdk_text_process_title_tinkoff_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_status" />

    <Button
        android:id="@+id/button_finish"
        style="@style/cpsdk_ButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/cpsdk_text_process_button_tinkoff_pay_sbp"
        android:textColor="@color/cpsdk_blue"
        android:background="@drawable/cpsdk_bg_rounded_white_button_with_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_description" />


    <ImageView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cpsdk_margin_big"
        android:src="@drawable/cpsdk_secured_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_finish" />


</androidx.constraintlayout.widget.ConstraintLayout>